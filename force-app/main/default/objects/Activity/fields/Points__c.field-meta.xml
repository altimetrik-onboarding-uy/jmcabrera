<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Points__c</fullName>
    <externalId>false</externalId>
    <formula>IF(ISPICKVAL( Task_Type__c ,&quot;TO-DO&quot;),
    CASE(Difficulty__c,
    &quot;Trivial&quot;,1,
    &quot;Easy&quot;,2,
    &quot;Medium&quot;,3,
    5),
    IF(ISPICKVAL(Task_Type__c,&quot;Daily&quot;),
        CASE(Difficulty__c,
            &quot;Trivial&quot;,0.5,
            &quot;Easy&quot;,1,
            &quot;Medium&quot;,1.5,
            2.5),1))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Points</label>
    <precision>18</precision>
    <required>false</required>
    <scale>1</scale>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
